@model TestApplication.Models.ProjectModels.ProjectEditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ProjectEditModel</h4>
<hr />
<div class="row">
    <dl class="row">
    <dt class="col-sm-10">
        Менеджер проекта:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.User.Name)
    </dd>
    </dl>
    <div class="col-md-4">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden"class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyOrder" class="control-label"></label>
                <input asp-for="CompanyOrder" class="form-control"/>
                <span asp-validation-for="CompanyOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyExecutor" class="control-label"></label>
                <input asp-for="CompanyExecutor" class="form-control"/>
                <span asp-validation-for="CompanyExecutor" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ProjectPriority" class="control-label"></label>
                <input asp-for="ProjectPriority" type="number"class="form-control" />
                <span asp-validation-for="ProjectPriority" class="text-danger"></span>
            </div>
            @if (Model.IsDirector)
            {
                <div class="form-group">
                    @Html.DropDownListFor(Model => Model.UserId, ViewBag.Managers as SelectList);
                </div>
            }
            else
            {
                <div class="form-group">
                    <input asp-for="UserId" type="hidden" class="form-control"/>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку проектов</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
