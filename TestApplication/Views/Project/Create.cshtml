@using Microsoft.AspNetCore.Identity
@model TestApplication.Models.ProjectModels.ProjectCreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Создать проект</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyOrder" class="control-label"></label>
                <input asp-for="CompanyOrder" class="form-control" />
                <span asp-validation-for="CompanyOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyExecutor" class="control-label"></label>
                <input asp-for="CompanyExecutor" class="form-control" />
                <span asp-validation-for="CompanyExecutor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectPriority" class="control-label"></label>
                <input asp-for="ProjectPriority" type="number"class="form-control" />
                <span asp-validation-for="ProjectPriority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
